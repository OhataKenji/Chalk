{
    "scopeName": "source.chalk",
    "patterns": [
        {
            "name": "comment.line.double-slash.chalk",
            "begin": "\\/\\/",
            "end": "[\\\n|\\\r\\\n]"
        },
        {
            "name": "punctuation.definition.metadata.markdown",
            "match": "｜(.*)《(.*)》",
            "captures": {
                "1": {
                    "name": "string.other.ruby.kaki"
                },
                "2": {
                    "name": "string.other.ruby.yomi"
                }
            }
        },
        {
            "name": "string.quoted.other.kakko.chalk",
            "begin": "^(「)",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.string.begin.markdown.chalk"
                }
            },
            "end": "(」)",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.string.end.markdown.chalk"
                }
            }
        }
    ]
}